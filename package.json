{
  "name": "telebot",
  "version": "1.0.0",
  "description": "A simple telegram bot for practicing Telegram API.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node ./dist/index.js",
    "build": "concurrently \"npm run lint\"  \"rimraf dist/\" && tsup src/index.ts --dts --format cjs,esm",
    "lint": "eslint --ext .ts,.js ./src",
    "format": "prettier --write ./src"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.57.0",
    "concurrently": "^8.0.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "prettier": "^2.5.1",
    "rimraf": "^4.4.1",
    "tsup": "^6.7.0",
    "tsx": "^3.12.6",
    "typescript": "^5.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jdpena28/telebot.git"
  },
  "keywords": [
    "TelegramBot"
  ],
  "author": "jdpena28",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jdpena28/telebot/issues"
  },
  "homepage": "https://github.com/jdpena28/telebot#readme",
  "dependencies": {
    "date-fns": "^2.30.0",
    "dotenv": "^16.0.3",
    "grammy": "^1.16.0"
  }
}
